name: Convert SVG to PNG

on:
  push:
    paths:
      - "Coding/image.svg"

jobs:
  convert:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repo
      uses: actions/checkout@v4

    - name: Install Inkscape
      run: sudo apt-get install -y inkscape

    - name: Convert SVG to PNG
      run: |
        mkdir -p Coding
        for file in Coding/image.svg; do
          name=$(basename "$file" .svg)
          inkscape "$file" --export-type=png --export-filename="Coding/$image.png"
        done

    - name: Commit PNGs
      run: |
        git add Coding/image.png
        git commit -m "ðŸ¤– Auto-generated PNG from SVG"
        git push
